generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Representaci√≥n del esquema actual (Mapping existing tables)

model User {
  id        Int      @id @default(autoincrement())
  nombres   String
  apellidos String
  email     String   @unique
  password  String
  role      String   // 'Admin', 'Director', 'Control de Estudios', 'Docente'
  teacherId Int?     @map("teacher_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Student {
  id              Int       @id @default(autoincrement())
  nacionalidad    String
  cedula          String
  nombres         String
  apellidos       String
  email           String?
  genero          String?
  fechaNacimiento DateTime? @map("fecha_nacimiento")
  idGrado         Int?      @map("id_grado")
  idSeccion       Int?      @map("id_seccion")
  status          String    @default("Activo")
  deletedAt       DateTime? @map("deleted_at")

  @@map("students")
}

model Teacher {
  id           Int    @id @default(autoincrement())
  nacionalidad String
  cedula       String
  nombres      String
  apellidos    String
  email        String
  status       String @default("Activo")

  @@map("teachers")
}

model Materia {
  id            Int    @id @default(autoincrement())
  nombreMateria String @map("nombre_materia")
  idDocente     Int?   @map("id_docente")
  idGrado       Int?   @map("id_grado")
  idSeccion     Int?   @map("id_seccion")

  @@map("materias")
}

model Grado {
  id          Int    @id @default(autoincrement()) @map("id_grado")
  nombreGrado String @map("nombre_grado")

  @@map("grados")
}

model Seccion {
  id            Int    @id @default(autoincrement()) @map("id_seccion")
  nombreSeccion String @map("nombre_seccion")

  @@map("secciones")
}

model AnosEscolares {
  id     Int    @id @default(autoincrement())
  nombre String

  @@map("anos_escolares")
}

model Calificacion {
  studentId    Int     @map("student_id")
  materiaId    Int     @map("materia_id")
  anoEscolarId Int     @map("ano_escolar_id")
  lapso1       Json?   // Storing JSON arrays as Text in raw SQL, JSONB in Postgres
  lapso2       Json?
  lapso3       Json?
  isLocked     Boolean @default(false) @map("is_locked")

  @@id([studentId, materiaId, anoEscolarId])
  @@map("calificaciones")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  action    String
  details   String?
  timestamp DateTime @default(now())

  @@map("audit_logs")
}
