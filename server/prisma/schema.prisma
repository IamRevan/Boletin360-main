generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

// Para ejecutar: npx prisma db seed
// nota: esto requiere que el archivo este compilado o usar ts-node

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Representaci√≥n del esquema actual (Mapping existing tables)



// Enums
enum UserRole {
  DIRECTOR
  CONTROL_ESTUDIOS
  DOCENTE
  ADMIN
}

enum StudentStatus {
  ACTIVO
  RETIRADO
  GRADUADO
  INACTIVO
}

enum TeacherStatus {
  ACTIVO
  INACTIVO
}

model User {
  id        Int       @id @default(autoincrement())
  nombres   String
  apellidos String
  email     String    @unique
  password  String
  role      UserRole  // Enforced Enum

  teacherId Int?      @map("teacher_id")
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")
  
  teacher   Teacher?  @relation(fields: [teacherId], references: [id])
  notifications Notification[]

  @@index([teacherId]) // Performance Index
  @@map("users")
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  type      String   @default("info") // info, warning, success
  createdBy Int      @map("created_by") // Admin User ID
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("announcements")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  title     String
  content   String
  type      String   @default("info") // info, success, warning, error
  isRead    Boolean  @default(false)  @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")
  
  user      User     @relation(fields: [userId], references: [id])
  @@map("notifications")
}

model Student {
  id              Int       @id @default(autoincrement())
  nacionalidad    String
  cedula          String    @unique
  nombres         String
  apellidos       String
  email           String?
  genero          String?
  fechaNacimiento DateTime? @map("fecha_nacimiento")
  lugarNacimiento String?   @map("lugar_nacimiento")
  direccion       String?
  telefono        String?
  representante   String?   @map("nombre_representante")
  cedulaR         String?   @map("cedula_representante")
  telefonoR       String?   @map("telefono_representante")
  emailR          String?   @map("email_representante")
  observaciones   String?
  idGrado         Int?      @map("id_grado")
  idSeccion       Int?      @map("id_seccion")
  status          StudentStatus @default(ACTIVO)
  deletedAt       DateTime? @map("deleted_at")

  grado         Grado?          @relation(fields: [idGrado], references: [id], onDelete: Restrict)
  seccion       Seccion?        @relation(fields: [idSeccion], references: [id], onDelete: Restrict)
  calificaciones Calificacion[]

  @@index([idGrado])
  @@index([idSeccion])
  @@map("students")
}

model Teacher {
  id           Int    @id @default(autoincrement())
  nacionalidad String
  cedula       String @unique
  nombres      String
  apellidos    String
  email        String
  status       TeacherStatus @default(ACTIVO)

  users     User[]
  materias  Materia[]

  @@map("teachers")
}

model Materia {
  id            Int    @id @default(autoincrement())
  nombreMateria String @map("nombre_materia")
  idDocente     Int?   @map("id_docente")
  idGrado       Int?   @map("id_grado")
  idSeccion     Int?   @map("id_seccion")

  docente       Teacher?     @relation(fields: [idDocente], references: [id], onDelete: Restrict)
  grado         Grado?       @relation(fields: [idGrado], references: [id], onDelete: Restrict)
  seccion       Seccion?     @relation(fields: [idSeccion], references: [id], onDelete: Restrict)
  calificaciones Calificacion[]

  @@index([idDocente])
  @@index([idGrado])
  @@index([idSeccion])
  @@map("materias")
}

model Grado {
  id          Int    @id @default(autoincrement()) @map("id_grado")
  nombreGrado String @map("nombre_grado")

  students Student[]
  materias Materia[]

  @@map("grados")
}

model Seccion {
  id            Int    @id @default(autoincrement()) @map("id_seccion")
  nombreSeccion String @map("nombre_seccion")

  students Student[]
  materias Materia[]

  @@map("secciones")
}

model AnosEscolares {
  id     Int    @id @default(autoincrement())
  nombre String

  calificaciones Calificacion[]

  @@map("anos_escolares")
}

model Calificacion {
  id           Int     @id @default(autoincrement()) // Surrogate Key for Relations
  studentId    Int     @map("student_id")
  materiaId    Int     @map("materia_id")
  anoEscolarId Int     @map("ano_escolar_id")
  
  isLocked     Boolean @default(false) @map("is_locked")

  student    Student       @relation(fields: [studentId], references: [id], onDelete: Restrict)
  materia    Materia       @relation(fields: [materiaId], references: [id], onDelete: Restrict)
  anoEscolar AnosEscolares @relation(fields: [anoEscolarId], references: [id], onDelete: Restrict)
  
  evaluations Evaluation[]

  @@unique([studentId, materiaId, anoEscolarId]) // Composite Unique Constraint
  @@index([studentId])
  @@index([materiaId])
  @@index([anoEscolarId])
  @@map("calificaciones")
}

model Evaluation {
  id             Int          @id @default(autoincrement())
  calificacionId Int          @map("calificacion_id")
  lapso          Int          // 1, 2, 3
  descripcion    String
  nota           Decimal      @db.Decimal(5,2)
  ponderacion    Decimal      @db.Decimal(5,2)
  
  calificacion   Calificacion @relation(fields: [calificacionId], references: [id], onDelete: Cascade)

  @@index([calificacionId])
  @@map("evaluations")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  action    String
  details   String?
  timestamp DateTime @default(now())

  @@index([userId])
  @@map("audit_logs")
}
