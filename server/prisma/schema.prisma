generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

// Para ejecutar: npx prisma db seed
// nota: esto requiere que el archivo este compilado o usar ts-node

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Representaci√≥n del esquema actual (Mapping existing tables)


model User {
  id        Int       @id @default(autoincrement())
  nombres   String
  apellidos String
  email     String    @unique
  password  String
  role      String    // 'Admin', 'ControlEstudios', 'Teacher'
  teacherId Int?      @map("teacher_id")
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")
  
  teacher   Teacher?  @relation(fields: [teacherId], references: [id])
  notifications Notification[]

  @@map("users")
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  type      String   @default("info") // info, warning, success
  createdBy Int      @map("created_by") // Admin User ID
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("announcements")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  title     String
  content   String
  type      String   @default("info") // info, success, warning, error
  isRead    Boolean  @default(false)  @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")
  
  user      User     @relation(fields: [userId], references: [id])
  @@map("notifications")
}

model Student {
  id              Int       @id @default(autoincrement())
  nacionalidad    String
  cedula          String    @unique
  nombres         String
  apellidos       String
  email           String?
  genero          String?
  fechaNacimiento DateTime? @map("fecha_nacimiento")
  lugarNacimiento String?   @map("lugar_nacimiento")
  direccion       String?
  telefono        String?
  representante   String?   @map("nombre_representante")
  cedulaR         String?   @map("cedula_representante")
  telefonoR       String?   @map("telefono_representante")
  emailR          String?   @map("email_representante")
  observaciones   String?
  idGrado         Int?      @map("id_grado")
  idSeccion       Int?      @map("id_seccion")
  status          String    @default("Activo")
  deletedAt       DateTime? @map("deleted_at")

  grado         Grado?          @relation(fields: [idGrado], references: [id])
  seccion       Seccion?        @relation(fields: [idSeccion], references: [id])
  calificaciones Calificacion[]

  @@map("students")
}

model Teacher {
  id           Int    @id @default(autoincrement())
  nacionalidad String
  cedula       String @unique
  nombres      String
  apellidos    String
  email        String
  status       String @default("Activo")

  users     User[]
  materias  Materia[]

  @@map("teachers")
}

model Materia {
  id            Int    @id @default(autoincrement())
  nombreMateria String @map("nombre_materia")
  idDocente     Int?   @map("id_docente")
  idGrado       Int?   @map("id_grado")
  idSeccion     Int?   @map("id_seccion")

  docente       Teacher?     @relation(fields: [idDocente], references: [id])
  grado         Grado?       @relation(fields: [idGrado], references: [id])
  seccion       Seccion?     @relation(fields: [idSeccion], references: [id])
  calificaciones Calificacion[]

  @@map("materias")
}

model Grado {
  id          Int    @id @default(autoincrement()) @map("id_grado")
  nombreGrado String @map("nombre_grado")

  students Student[]
  materias Materia[]

  @@map("grados")
}

model Seccion {
  id            Int    @id @default(autoincrement()) @map("id_seccion")
  nombreSeccion String @map("nombre_seccion")

  students Student[]
  materias Materia[]

  @@map("secciones")
}

model AnosEscolares {
  id     Int    @id @default(autoincrement())
  nombre String

  calificaciones Calificacion[]

  @@map("anos_escolares")
}

model Calificacion {
  studentId    Int     @map("student_id")
  materiaId    Int     @map("materia_id")
  anoEscolarId Int     @map("ano_escolar_id")
  lapso1       Json?   
  lapso2       Json?
  lapso3       Json?
  isLocked     Boolean @default(false) @map("is_locked")

  student    Student       @relation(fields: [studentId], references: [id])
  materia    Materia       @relation(fields: [materiaId], references: [id])
  anoEscolar AnosEscolares @relation(fields: [anoEscolarId], references: [id])

  @@id([studentId, materiaId, anoEscolarId])
  @@map("calificaciones")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  action    String
  details   String?
  timestamp DateTime @default(now())

  @@map("audit_logs")
}
